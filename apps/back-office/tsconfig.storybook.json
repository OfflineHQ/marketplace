  "include": [
    "**/*.stories.ts",
    "**/*.stories.js",
    "**/*.stories.jsx",
    "**/*.stories.tsx",
    "**/*.mdx",
    "../../libs/features/**/*.stories.ts",
    "../../libs/features/**/*.stories.js",
    "../../libs/features/**/*.stories.jsx",
    "../../libs/features/**/*.stories.tsx",
    "../../libs/features/**/*.mdx",
    "../../libs/next/hygraph/**/*.stories.tsx",
    "../../libs/next/date/**/*.stories.tsx",
    ".storybook/*.ts",
    ".storybook/*.js",
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "types/*.d.ts",
    "preview.tsx"
  ]
}
