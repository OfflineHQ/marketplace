{
  "name": "nft-thirdweb",
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/nft/thirdweb/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nx/js:swc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/libs/nft/thirdweb",
        "tsConfig": "libs/nft/thirdweb/tsconfig.lib.json",
        "packageJson": "libs/nft/thirdweb/package.json",
        "main": "libs/nft/thirdweb/src/index.ts",
        "assets": ["libs/nft/thirdweb/*.md"]
      }
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": [
          "libs/nft/thirdweb/**/*.ts",
          "libs/nft/thirdweb/package.json"
        ]
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "libs/nft/thirdweb/jest.config.ts",
        "passWithNoTests": true
      },
      "configurations": {
        "ci": {
          "ci": true,
          "codeCoverage": true
        }
      }
    }
  },
  "tags": []
}
